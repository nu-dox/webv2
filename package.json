{
	"name": "nudox-web",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "bun x --bun vite dev",
		"build": "bun x --bun vite build",
		"preview": "bun x --bun vite preview",
		"prepare": "bun x svelte-kit sync || echo ''",
		"check": "bun x svelte-kit sync && bun x svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bun x svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "bun x prettier --write .",
		"lint": "bun x prettier --check . && bun x eslint .",
		"test:unit": "bun test",
		"test": "bun test && bun run test:e2e",
		"test:e2e": "bun x playwright test",
		"db:push": "bun x drizzle-kit push",
		"db:generate": "bun x drizzle-kit generate",
		"db:migrate": "bun x drizzle-kit migrate",
		"db:studio": "bun x drizzle-kit studio"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-node": "^5.5.2",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.14",
		"@types/bun": "1.3.8",
		"@types/node": "^24.10.1",
		"@vitest/browser-playwright": "^4.0.5",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.44.6",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"mdsvex": "^0.12.6",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.1",
		"vite": "^7.1.10",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest-browser-svelte": "^2.0.1"
	},
	"dependencies": {
		"@terminusdb/terminusdb-client": "^12.0.0",
		"devalue": "^5.6.2",
		"esbuild": "^0.27.2",
		"js-cookie": "^3.0.5",
		"mongodb": "^7.0.0"
	}
}
